{
  "id": "stroop-language",
  "name": "Language Stroop Task",
  "description": "Identify the ink color of color words presented in different languages",
  "version": "1.0",

  "primes": {
    "type": "text",
    "description": "Word meaning (A) - the semantic content that may interfere",
    "items": ["RED", "BLUE", "GREEN", "YELLOW"],
    "items_hebrew": ["אדום", "כחול", "ירוק", "צהוב"]
  },

  "targets": {
    "type": "color",
    "description": "Ink color (B) - the feature to be identified",
    "items": ["#ff0000", "#0000ff", "#00ff00", "#ffff00"],
    "labels": ["red", "blue", "green", "yellow"]
  },

  "presentation": {
    "mode": "simultaneous",
    "description": "A and B are presented together (word in colored ink)",
    "fixation_ms": 500,
    "ITI_ms": 1000,
    "response_timeout_ms": 3000
  },

  "response": {
    "type": "key_press",
    "instruction": "Press the key corresponding to the INK COLOR (ignore the word)",
    "keys": {
      "red": "R",
      "blue": "B",
      "green": "G",
      "yellow": "Y"
    },
    "measure": ["RT", "ER"]
  },

  "trials": {
    "conditions": ["congruent", "incongruent"],
    "randomize": true,
    "repetitions_per_condition": 10,
    "practice_trials": 4
  },

  "feedback": {
    "show": true,
    "duration_ms": 500,
    "correct_text": "Correct!",
    "incorrect_text": "Incorrect"
  },

  "data": {
    "save_to_supabase": true,
    "table_name": "experiment_results",
    "fields": [
      "trial_number",
      "prime",
      "target",
      "condition",
      "response",
      "correct",
      "rt",
      "language"
    ]
  },

  "metadata": {
    "paradigm": "Stroop",
    "framework": "ABCD",
    "reference": "Sivroni & Stark, 2025",
    "created": "2025-12-06"
  }
}
